<mvc:View
    controllerName="com.vesi.zfaca_accessibility_training.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
>
    <uxap:ObjectPageLayout
        id="idObjectPageLayout"
        upperCaseAnchorBar="false"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle id="idObjectPageDynamicHeaderTitle">
                <uxap:heading>
                    <Title
                        id="idExercisesAccessibilityTitle"
                        text="{i18n>Main.view.headerTitle.title}"
                        level="H1"
                        wrapping="true"
                    />
                </uxap:heading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:sections>
            <core:Fragment
                id="idRoleFragment"
                fragmentName="com.vesi.zfaca_accessibility_training.view.fragment.Role"
                type="XML"
            />
            <core:Fragment
                id="idAccessibleNameFragment"
                fragmentName="com.vesi.zfaca_accessibility_training.view.fragment.AccessibleName"
                type="XML"
            />
            <core:Fragment
                id="idErrorManagementContextChangesFragment"
                fragmentName="com.vesi.zfaca_accessibility_training.view.fragment.ErrorManagementContextChanges"
                type="XML"
            />
            <core:Fragment
                id="idKeyboardNavigationFragment"
                fragmentName="com.vesi.zfaca_accessibility_training.view.fragment.KeyboardNavigation"
                type="XML"
            />
            <core:Fragment
                id="idOtherBestPracticesFragment"
                fragmentName="com.vesi.zfaca_accessibility_training.view.fragment.OtherBestPractices"
                type="XML"
            />
        </uxap:sections>
        <uxap:dependents>
            <Popover
                id="idExerciseAnswerPassPopover"
                placement="HorizontalPreferredLeft"
                contentWidth="230px"
                horizontalScrolling="false"
                initialFocus="idExerciseAnswerPassInput"
            >
                <content>
                    <Input
                        id="idExerciseAnswerPassInput"
                        placeholder="{i18n>Input.password}"
                        class="sapUiTinyMargin"
                        width="200px"
                        submit="onInputnlockSubmit"
                    />
                    <Input
                        id="idExerciseNumberInput"
                        visible="false"
                    />
                </content>
                <endButton>
                    <Button
                        id="idUnlockAnswerButton"
                        icon="sap-icon://unlocked"
                        text="{i18n>Button.unlock}"
                        press="onUnlockButtonPress"
                    />
                </endButton>
            </Popover>
        </uxap:dependents>
    </uxap:ObjectPageLayout>
</mvc:View>
