<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise16ObjectPageSubSection"
        title="{i18n>Exercise16.fragment.title}"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer16Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise16IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise16FragmentModel>/answerFile1}"
                                key="{oExercise16FragmentModel>/answerFile1}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode1"
                                                    value="{oExercise16FragmentModel>/answerCode1}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="json"
                                    value="{
                                        path: 'oExercise16FragmentModel>/answerCode1',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                text="{oExercise16FragmentModel>/answerFile2}"
                                key="{oExercise16FragmentModel>/answerFile2}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode2"
                                                    value="{oExercise16FragmentModel>/answerCode2}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise16FragmentModel>/answerCode2',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                text="{oExercise16FragmentModel>/answerFile3}"
                                key="{oExercise16FragmentModel>/answerFile3}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode3"
                                                    value="{oExercise16FragmentModel>/answerCode3}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    value="{
                                        path: 'oExercise16FragmentModel>/answerCode3',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
            <core:Fragment
                fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise16"
                type="XML"
            />
        </uxap:dependents>
        
        <uxap:blocks>
            <VBox
                id="idExercise16VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise16ObjectiveFormattedText"
                    htmlText="{oExercise16FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise16TaskFormattedText"
                    htmlText="{oExercise16FragmentModel>/task}"
                />
                <FormattedText
                    id="idExercise16InstructionFormattedText"
                    htmlText="{oExercise16FragmentModel>/instruction}"
                />
                <FlexBox
                    id="idExercise16FlexBox"
                    alignItems="Center"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <Button
                        id="idOpenPopoverExercise16Button"
                        text="{i18n>Exercise16.fragment.button.text}"
                        width="300px"
                        press="onOpenPopoverButtonExercise16Press"
                    />
                </FlexBox>
                <FormattedText
                    id="idExercise16HowToTestFormattedText"
                    htmlText="{oExercise16FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise16ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp16Toolbar">
                            <Title
                                id="idExerciseHelp16Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp16ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise16AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="16"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                    <FormattedText
                        id="idExercise16Solution1FormattedText"
                        htmlText="{oExercise16FragmentModel>/helpFile1}"
                    />
                    <FormattedText
                        id="idExercise16Code1FormattedText"
                        htmlText="{oExercise16FragmentModel>/helpCode1}"
                    />
                    <FormattedText
                        id="idExercise16Solution2FormattedText"
                        htmlText="{oExercise16FragmentModel>/helpFile2}"
                    />
                    <FormattedText
                        id="idExercise16Code2FormattedText"
                        htmlText="{oExercise16FragmentModel>/helpCode2}"
                    />
                    <FormattedText
                        id="idExercise16Solution3FormattedText"
                        htmlText="{oExercise16FragmentModel>/helpFile3}"
                    />
                    <FormattedText
                        id="idExercise16Code3FormattedText"
                        htmlText="{oExercise16FragmentModel>/helpCode3}"
                    />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="3"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
