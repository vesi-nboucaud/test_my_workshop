<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise15ObjectPageSubSection"
        title="{i18n>Exercise15.fragment.title}"
        class="sapUiSmallMarginTop"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer15Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise15IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise15FragmentModel>/answerFile}"
                                key="{oExercise15FragmentModel>/answerFile}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode"
                                                    value="{oExercise15FragmentModel>/answerCode}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    value="{
                                        path: 'oExercise15FragmentModel>/answerCode',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise15VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise15ObjectiveFormattedText"
                    htmlText="{oExercise15FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise15TaskFormattedText"
                    htmlText="{oExercise15FragmentModel>/task}"
                />
                <FormattedText
                    id="idExercise15InstructionFormattedText"
                    htmlText="{oExercise15FragmentModel>/instruction}"
                />
                <FlexBox
                    id="idExercise15VerticalFlexBox"
                    direction="Column"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <FlexBox
                        id="idExercise15HorizontalFlexBox"
                        alignItems="Center"
                        backgroundDesign="Translucent"
                    >
                        <Label
                            id="idFirstNameExercise15Label"
                            labelFor="idExercise15Input"
                            required="true"
                            width="150px"
                            class="sapUiSmallMarginEnd"
                            textAlign="End"
                            text="{i18n>Exercise15.fragment.label}"
                        />
                        <Input
                            id="idExercise15Input"
                            required="true"
                            placeholder="{i18n>Exercise15.fragment.input.placeholder}"
                            width="450px"
                        />
                        <Button
                            id="idSubmitExercise15Button"
                            text="{i18n>Exercise15.fragment.button}"
                            width="150px"
                            class="sapUiSmallMarginBegin"
                            press=".Exercise15.onSubmitExercise15ButtonPress"
                        />
                    </FlexBox>
                </FlexBox>
                <FormattedText
                    id="idExercise15HowToTestFormattedText"
                    htmlText="{oExercise15FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise15ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp15Toolbar">
                            <Title
                                id="idExerciseHelp15Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp15ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise15AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="15"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise15SolutionFormattedText"
                            htmlText="{oExercise15FragmentModel>/helpFile}"
                        />
                        <FormattedText
                            id="idExercise15CodeFormattedText"
                            htmlText="{oExercise15FragmentModel>/helpCode}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="2"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
