<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise13ObjectPageSubSection"
        title="{i18n>Exercise13.fragment.title}"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer13Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise13IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise13FragmentModel>/answerFile1}"
                                key="{oExercise13FragmentModel>/answerFile1}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode1"
                                                    value="{oExercise13FragmentModel>/answerCode1}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise13FragmentModel>/answerCode1',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                text="{oExercise13FragmentModel>/answerFile2}"
                                key="{oExercise13FragmentModel>/answerFile2}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode2"
                                                    value="{oExercise13FragmentModel>/answerCode2}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    value="{
                                        path: 'oExercise13FragmentModel>/answerCode2',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise13VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise13ObjectiveFormattedText"
                    htmlText="{oExercise13FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise13TaskFormattedText"
                    htmlText="{oExercise13FragmentModel>/task}"
                />
                <FormattedText
                    id="idExercise13InstructionFormattedText"
                    htmlText="{oExercise13FragmentModel>/instruction}"
                />
                <FlexBox
                    id="idExercise13FlexBox"
                    alignItems="Center"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <core:Fragment
                        fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise13"
                        type="XML"
                    />
                </FlexBox>
                <FormattedText
                    id="idExercise13HowToTestFormattedText"
                    htmlText="{oExercise13FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise13ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp13Toolbar">
                            <Title
                                id="idExerciseHelp13Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp13ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise13AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="13"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise13Solution1FormattedText"
                            htmlText="{oExercise13FragmentModel>/helpFile1}"
                        />
                        <FormattedText
                            id="idExercise13Code1FormattedText"
                            htmlText="{oExercise13FragmentModel>/helpCode1}"
                        />
                        <FormattedText
                            id="idExercise13Solution2FormattedText"
                            htmlText="{oExercise13FragmentModel>/helpFile2}"
                        />
                        <FormattedText
                            id="idExercise13Code2FormattedText"
                            htmlText="{oExercise13FragmentModel>/helpCode2}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="1"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
