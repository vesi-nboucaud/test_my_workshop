<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise14ObjectPageSubSection"
        title="{i18n>Exercise14.fragment.title}"
        class="sapUiSmallMarginTop"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer14Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise14IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise14FragmentModel>/answerFile}"
                                key="{oExercise14FragmentModel>/answerFile}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode"
                                                    value="{oExercise14FragmentModel>/answerCode}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    value="{
                                        path: 'oExercise14FragmentModel>/answerCode',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise14VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise14ObjectiveFormattedText"
                    htmlText="{oExercise14FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise14TaskFormattedText"
                    htmlText="{oExercise14FragmentModel>/task}"
                />
                <FormattedText
                    id="idExercise14InstructionFormattedText"
                    htmlText="{oExercise14FragmentModel>/instruction}"
                />
                <Panel
                    id="idExercise14Panel"
                    headerText="{i18n>Exercise14.fragment.panel.title}"
                    width="50%"
                >
                    <Label
                        id="idFirstNameExercise14Label"
                        required="true"
                        text="{i18n>Exercise14.fragment.label.firstName}"
                        labelFor="idExercise14FirstNameInput"
                    />
                    <Input
                        id="idExercise14FirstNameInput"
                        required="true"
                        placeholder="{i18n>Exercise14.fragment.input.placeholder.firstName}"
                        class="sapUiTinyMarginBottom"
                    />
                    <Label
                        id="idLastNameExercise14Label"
                        required="true"
                        text="{i18n>Exercise14.fragment.label.lastName}"
                        labelFor="idExercise14LastNameInput"
                    />
                    <Input
                        id="idExercise14LastNameInput"
                        required="true"
                        placeholder="{i18n>Exercise14.fragment.input.placeholder.lastName}"
                        class="sapUiTinyMarginBottom"
                    />
                    <Label
                        id="idEmailExercise14Label"
                        required="true"
                        text="{i18n>Exercise14.fragment.label.email}"
                        labelFor="idExercise14EmailInput"
                    />
                    <Input
                        id="idExercise14EmailInput"
                        required="true"
                        placeholder="{i18n>Exercise14.fragment.input.placeholder.email}"
                        class="sapUiTinyMarginBottom"
                    />
                    <HBox
                        id="idExercise14HBox"
                        width="100%"
                        direction="RowReverse"
                    >
                        <Button
                            id="idSubmitExercise14Button"
                            text="{i18n>Exercise14.fragment.button.submit}"
                            width="150px"
                            class="sapUiTinyMarginBottom"
                            press=".Exercise14.onSubmitButtonPress"
                        />
                    </HBox>
                </Panel>
                <FormattedText
                    id="idExercise14HowToTestFormattedText"
                    htmlText="{oExercise14FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise14ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp14Toolbar">
                            <Title
                                id="idExerciseHelp14Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp14ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise14AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="14"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise14SolutionFormattedText"
                            htmlText="{oExercise14FragmentModel>/helpFile}"
                        />
                        <FormattedText
                            id="idExercise14CodeFormattedText"
                            htmlText="{oExercise14FragmentModel>/helpCode}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="2"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
