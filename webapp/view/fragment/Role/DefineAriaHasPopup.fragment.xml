<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise02ObjectPageSubSection"
        title="{i18n>Exercise02.fragment.title}"
        class="sapUiSmallMarginTop"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer02Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise02IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise02FragmentModel>/answerFile1}"
                                key="{oExercise02FragmentModel>/answerFile1}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode1"
                                                    value="{oExercise02FragmentModel>/answerCode1}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise02FragmentModel>/answerCode1',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                text="{oExercise02FragmentModel>/answerFile2}"
                                key="{oExercise02FragmentModel>/answerFile2}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode2"
                                                    value="{oExercise02FragmentModel>/answerCode2}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise02FragmentModel>/answerCode2',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
            <Dialog
                id="idExercise02Dialog"
                ariaLabelledBy="idDialogTitleExercise02Text"
                class="sapUiResponsivePadding"
            >
                <content>
                    <Text
                        id="idDialogTitleExercise02Text"
                        text="{i18n>Exercise02.fragment.dialog.title}"
                    />
                    <Text
                        id="idThisIsTheContentOfTheDialogidExercise02Text"
                        text="{i18n>Exercise02.fragment.dialog.text}"
                    />
                </content>
                <endButton>
                    <Button
                        id="idCloseDialogExercise02Button"
                        text="{i18n>Exercise02.fragment.dialog.button.close}"
                        press="onCloseButtonExercise02Press"
                    />
                </endButton>
            </Dialog>
            <Menu id="idExercise02Menu">
                <items>
                    <MenuItem
                        id="idItem01Exercise02MenuItem"
                        text="{i18n>Exercise02.fragment.menu.item01.text}"
                        icon="sap-icon://accept"
                    />
                    <MenuItem
                        id="idItem02Exercise02MenuItem"
                        text="{i18n>Exercise02.fragment.menu.item02.text}"
                        icon="sap-icon://decline"
                    />
                    <MenuItem
                        id="idItem03Exercise02MenuItem"
                        text="{i18n>Exercise02.fragment.menu.item03.text}"
                        icon="sap-icon://save"
                    />
                </items>
            </Menu>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise02VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise02ObjectiveFormattedText"
                    htmlText="{oExercise02FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise02TaskFormattedText"
                    htmlText="{oExercise02FragmentModel>/task}"
                />
                <Title
                    id="idButtonTriggeringADialogTitle"
                    text="{i18n>Exercise02.fragment.dialog.exercise.title}"
                    level="H3"
                />
                <FormattedText
                    id="idExercise02Instruction1FormattedText"
                    htmlText="{oExercise02FragmentModel>/instruction1}"
                />
                <FlexBox
                    id="idExercise02DialogFlexBox"
                    direction="Column"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <core:Fragment
                        fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise02_Dialog"
                        type="XML"
                    />
                </FlexBox>
                <Title
                    id="idButtonTriggeringAMenuTitle"
                    text="{i18n>Exercise02.fragment.menu.exercise.title}"
                    level="H3"
                />
                <FormattedText
                    id="idExercise02Instruction2FormattedText"
                    htmlText="{oExercise02FragmentModel>/instruction2}"
                />
                <FlexBox
                    id="idExercise02MenuFlexBox"
                    direction="Column"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <core:Fragment
                        fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise02_Menu"
                        type="XML"
                    />
                </FlexBox>
                <FormattedText
                    id="idExercise02HowToTestFormattedText"
                    htmlText="{oExercise02FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise02ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp02Toolbar">
                            <Title
                                id="idExerciseHelp02Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp02ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise02AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="02"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise02Solution1FormattedText"
                            htmlText="{oExercise02FragmentModel>/helpFile1}"
                        />
                        <FormattedText
                            id="idExercise02Code1FormattedText"
                            htmlText="{oExercise02FragmentModel>/helpCode1}"
                        />
                        <FormattedText
                            id="idExercise02Solution2FormattedText"
                            htmlText="{oExercise02FragmentModel>/helpFile2}"
                        />
                        <FormattedText
                            id="idExercise02Code2FormattedText"
                            htmlText="{oExercise02FragmentModel>/helpCode2}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="1"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
