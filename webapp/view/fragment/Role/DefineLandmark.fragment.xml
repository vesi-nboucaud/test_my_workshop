<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise03ObjectPageSubSection"
        title="{i18n>Exercise03.fragment.title}"
        class="sapUiSmallMarginTop"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer03Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise03IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise03FragmentModel>/answerFile}"
                                key="{oExercise03FragmentModel>/answerFile}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode"
                                                    value="{oExercise03FragmentModel>/answerCode}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise03FragmentModel>/answerCode',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise03VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise03ObjectiveFormattedText"
                    htmlText="{oExercise03FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise03TaskFormattedText"
                    htmlText="{oExercise03FragmentModel>/task}"
                />
                <FormattedText
                    id="idExercise03InstructionFormattedText"
                    htmlText="{oExercise03FragmentModel>/instruction}"
                />
                <FlexBox
                    id="idExercise03FlexBox"
                    alignItems="Center"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <Button
                        id="idGoToExercise03Button"
                        text="{i18n>Exercise03.fragment.navto.button}"
                        width="300px"
                        press="onGoToExercise03ButtonPress"
                    />
                </FlexBox>
                <FormattedText
                    id="idExercise03HowToTestFormattedText"
                    htmlText="{oExercise03FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise03ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp03Toolbar">
                            <Title
                                id="idExerciseHelp03Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp03ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise03AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="03"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise03SolutionFormattedText"
                            htmlText="{oExercise03FragmentModel>/helpFile}"
                        />
                        <FormattedText
                            id="idExercise03CodeFormattedText"
                            htmlText="{oExercise03FragmentModel>/helpCode}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="2"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
