<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection id="idExercise18ObjectPageSubSection">
        <uxap:dependents>
            <Dialog
                id="idAnswer18Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise18IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise18FragmentModel>/answerFile1}"
                                key="{oExercise18FragmentModel>/answerFile1}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode1"
                                                    value="{oExercise18FragmentModel>/answerCode1}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise18FragmentModel>/answerCode1',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                text="{oExercise18FragmentModel>/answerFile2}"
                                key="{oExercise18FragmentModel>/answerFile2}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode2"
                                                    value="{oExercise18FragmentModel>/answerCode2}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise18FragmentModel>/answerCode2',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise18VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise18ObjectiveFormattedText"
                    htmlText="{oExercise18FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise18TaskFormattedText"
                    htmlText="{oExercise18FragmentModel>/task}"
                />
                <Title
                    id="idTextCaseExercise18Title"
                    text="{i18n>Exercise18.fragment.textCase.title}"
                    level="H3"
                />
                <FormattedText
                    id="idExercise18Instruction1FormattedText"
                    htmlText="{oExercise18FragmentModel>/instruction1}"
                />
                <FlexBox
                    id="idExercise18TextFlexBox"
                    direction="Column"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <core:Fragment
                        fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise18_Text"
                        type="XML"
                    />
                </FlexBox>
                <Title
                    id="idTableCaseAlwaysSetVisibleFalseForEmptyFieldsControlCheckNeededTitle1"
                    text="{i18n>Exercise18.fragment.tableCase.title}"
                    level="H3"
                />
                <FormattedText
                    id="idExercise18Instruction2FormattedText"
                    htmlText="{oExercise18FragmentModel>/instruction2}"
                />
                <FlexBox
                    id="idExercise18TableFlexBox"
                    direction="Column"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <core:Fragment
                        fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise18_Table"
                        type="XML"
                    />
                </FlexBox>
                <FormattedText
                    id="idExercise18HowToTestFormattedText"
                    htmlText="{oExercise18FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise18ExpectedResultPanel"
                    expandable="true"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp18Toolbar">
                            <Title
                                id="idExerciseHelp18Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp18ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise18AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="18"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise18Solution1FormattedText"
                            htmlText="{oExercise18FragmentModel>/helpFile1}"
                        />
                        <FormattedText
                            id="idExercise18Code1FormattedText"
                            htmlText="{oExercise18FragmentModel>/helpCode1}"
                        />
                        <FormattedText
                            id="idExercise18Solution2FormattedText"
                            htmlText="{oExercise18FragmentModel>/helpFile2}"
                        />
                        <FormattedText
                            id="idExercise18Code2FormattedText"
                            htmlText="{oExercise18FragmentModel>/helpCode2}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="1"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
