<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:code="sap.ui.codeeditor"
    core:require="{
        formatter: 'com/vesi/zfaca_accessibility_training/model/models'
    }"
>
    <uxap:ObjectPageSubSection
        id="idExercise07ObjectPageSubSection"
        title="{i18n>Exercise07.fragment.title}"
        class="sapUiSmallMarginTop"
    >
        <uxap:dependents>
            <Dialog
                id="idAnswer07Dialog"
                resizable="true"
                draggable="true"
                contentWidth="600px"
                title="{i18n>Dialog.answer}"
            >
                <content>
                    <IconTabBar
                        id="idExercise07IconTabBar"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="{oExercise07FragmentModel>/answerFile}"
                                key="{oExercise07FragmentModel>/answerFile}"
                            >
                                <Toolbar design="Transparent">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://copy"
                                            text="{i18n>Button.copy}"
                                            press="onCopyButtonPress"
                                        >
                                            <customData>
                                                <core:CustomData
                                                    key="answerCode"
                                                    value="{oExercise07FragmentModel>/answerCode}"
                                                />
                                            </customData>
                                        </Button>
                                    </content>
                                </Toolbar>
                                <code:CodeEditor
                                    editable="false"
                                    type="xml"
                                    value="{
                                        path: 'oExercise07FragmentModel>/answerCode',
                                        formatter: 'formatter._dec'
                                    }"
                                    height="400px"
                                />
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <endButton>
                    <Button
                        text="{i18n>Button.close}"
                        press="onCloseButtonDialogPress"
                    />
                </endButton>
            </Dialog>
        </uxap:dependents>
        <uxap:blocks>
            <VBox
                id="idExercise07VBox"
                class="sapUiSmallMarginBeginEnd"
            >
                <FormattedText
                    id="idExercise07ObjectiveFormattedText"
                    htmlText="{oExercise07FragmentModel>/objective}"
                />
                <FormattedText
                    id="idExercise07TaskFormattedText"
                    htmlText="{oExercise07FragmentModel>/task}"
                />
                <FormattedText
                    id="idExercise07InstructionFormattedText"
                    htmlText="{oExercise07FragmentModel>/instruction}"
                />
                <FlexBox
                    id="idExercise07FlexBox"
                    direction="Column"
                    backgroundDesign="Translucent"
                    class="sapUiSmallMarginTopBottom"
                >
                    <core:Fragment
                        fragmentName="com.vesi.zfaca_accessibility_training.exercises.Exercise07"
                        type="XML"
                    />
                </FlexBox>
                <FormattedText
                    id="idExercise07HowToTestFormattedText"
                    htmlText="{oExercise07FragmentModel>/howToTest}"
                />
                <Panel
                    id="idExercise07ExpectedResultPanel"
                    expandable="true"
                    headerText="Exercise Help"
                >
                    <headerToolbar>
                        <Toolbar id="idExerciseHelp07Toolbar">
                            <Title
                                id="idExerciseHelp07Title"
                                text="{i18n>Panel.exercise.Help}"
                            />
                            <ToolbarSpacer id="idExerciseHelp07ToolbarSpacer" />
                            <Button
                                id="idUnlockExercise07AnswerButton"
                                icon="sap-icon://permission"
                                tooltip="{i18n>Button.unlock.answer}"
                                press="onButtonUnlockExerciseAnswerPress"
                            >
                                <customData>
                                    <core:CustomData
                                        key="exercise"
                                        value="07"
                                    />
                                </customData>
                            </Button>
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <FormattedText
                            id="idExercise07SolutionFormattedText"
                            htmlText="{oExercise07FragmentModel>/helpFile}"
                        />
                        <FormattedText
                            id="idExercise07CodeFormattedText"
                            htmlText="{oExercise07FragmentModel>/helpCode}"
                        />
                    </content>
                </Panel>
            </VBox>
        </uxap:blocks>
        <uxap:actions>
            <RatingIndicator
                displayOnly="true"
                maxValue="3"
                value="1"
            />
        </uxap:actions>
    </uxap:ObjectPageSubSection>
</core:FragmentDefinition>
