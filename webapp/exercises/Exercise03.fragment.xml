<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="idExercise03Page"
        backgroundDesign="Solid"
    >
        <customHeader>
            <Bar id="idCustomHeaderExercise03Bar">
                <contentMiddle>
                    <Title
                        id="idFlatWatchHDExercise03Title"
                        level="H2"
                        text="{i18n>Exercise03.fragment.page.header.title}"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="idCustomerExercise03Button"
                        icon="sap-icon://customer"
                    />
                    <ToggleButton
                        id="idCartExercise03ToggleButton"
                        icon="sap-icon://cart"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <subHeader>
            <Toolbar id="idSubHeaderExercise03Toolbar">
                <Text
                    id="idCategoryLCDScreensExercise03Text"
                    class="sapUiTinyMarginBegin"
                    text="{i18n>Exercise03.fragment.page.subHeader.text}"
                />
                <ToolbarSpacer id="idSubHeaderExercise03ToolbarSpacer" />
            </Toolbar>
        </subHeader>
        <footer>
            <Toolbar id="idFooterExercise03Toolbar">
                <ToolbarSpacer id="idFooterExercise03ToolbarSpacer" />
                <Button
                    id="idAddToCartExercise03Button"
                    text="{i18n>Exercise03.fragment.page.footer.button}"
                    type="Emphasized"
                />
            </Toolbar>
        </footer>
        <content>
            <ObjectHeader
                id="idExercise03ObjectHeader"
                title="{i18n>Exercise03.fragment.page.content.objectHeader.title}"
                titleLevel="H3"
                numberUnit="EUR"
            >
                <attributes>
                    <ObjectAttribute
                        id="idVeryBestScreensExercise03ObjectAttribute"
                        title="{i18n>Exercise03.fragment.page.content.supplier.title}"
                        text="{i18n>Exercise03.fragment.page.content.supplier.text}"
                    />
                    <ObjectAttribute
                        id="idInchXPixelHDTVReadyExercise03ObjectAttribute"
                        title="{i18n>Exercise03.fragment.page.content.description.title}"
                        text="{i18n>Exercise03.fragment.page.content.description.text}"
                    />
                    <ObjectAttribute
                        id="idKGExercise03ObjectAttribute"
                        title="{i18n>Exercise03.fragment.page.content.weight.title}"
                        text="{i18n>Exercise03.fragment.page.content.weight.text}"
                    />
                    <ObjectAttribute
                        id="idCmCmCmExercise03ObjectAttribute"
                        title="{i18n>Exercise03.fragment.page.content.measures.title}"
                        text="{i18n>Exercise03.fragment.page.content.measures.text}"
                    />
                </attributes>
                <statuses>
                    <ObjectStatus
                        id="idScreensAvailableExercise03ObjectStatus"
                        text="{i18n>Exercise03.fragment.page.content.status}"
                        state="Success"
                    />
                </statuses>
            </ObjectHeader>
            <VBox
                id="idImageExercise03VBox"
                alignItems="Center"
            >
                <Image
                    id="idProductImage"
                    src="{images>/exercise03}"
                    decorative="true"
                    densityAware="false"
                    class="sapUiSmallMargin"
                    width="100%"
                    height="100%"
                />
            </VBox>
        </content>
    </Page>
</core:FragmentDefinition>
